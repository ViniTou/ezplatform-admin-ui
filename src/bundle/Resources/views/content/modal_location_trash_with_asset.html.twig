{% form_theme form '@ezdesign/form_fields.html.twig' %}
{# @deprecated since 2.5, to be removed in 3.0 #}

<div class="modal fade ez-modal ez-modal--trash-with-asset" id="trash-with-asset-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <svg class="ez-icon ez-icon--medium" aria-hidden="true">
                        <use xlink:href="{{ asset('bundles/ezplatformadminui/img/ez-icons.svg') }}#discard"></use>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <p class="ez-modal-body__main mb-2">
                    {{ 'trash_asset.modal.message_header'|trans }}
                </p>
                <p>
                    {{ 'trash_asset.modal.message_body'|trans }}
                </p>
            </div>
            <div class="modal-footer">
                {{ form_start(form, {'action': path('ezplatform.location.trash')}) }}
                <button type="button" class="btn btn-dark" data-dismiss="modal">
                    {{ 'trash.form.cancel'|trans|desc('Cancel') }}
                </button>
                {{ form_widget(form.trash, {'attr': {'class': 'btn-danger font-weight-bold'}}) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
