<div class="row ez-header pt-3">
    <div class="container">
        <ul class="nav nav-tabs ez-tabs nav-tabs-{{ group }} px-4" role="tablist" id="ez-tab-list-{{ group }}">
            {% for tab in tabs %}
                {% set id = group ~ '-' ~ tab.identifier %}
                {% set active = loop.first %}
                <li class="nav-item">
                    <a class="nav-link{% if active %} active{% endif %}" id="ez-tab-label-{{ group }}"
                       data-toggle="tab" href="#ez-tab-{{ id }}" role="tab" aria-controls="ez-tab-{{ id }}"
                       aria-expanded="{{ active }}">{{ tab.name }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
<div class="tab-content container mt-4 px-5 row" id="ez-tab-list-content-{{ group }}">
    {% for tab in tabs %}
        {% set id = group ~ '-' ~ tab.identifier %}
        {% set active = loop.first %}

        <div class="tab-pane{% if active %} active{% endif %}" id="ez-tab-{{ id }}" role="tabpanel"
             aria-labelledby="ez-tab-label-{{ group }}">
            {{ tab.view|raw }}
        </div>
    {% endfor %}
    <div class="col-sm-1 pt-4 bg-secondary ez-context-menu">
        <div class="ez-sticky-container">
            {% set content_type_sidebar_right = knp_menu_get('ezplatform_admin_ui.menu.content_type.sidebar_right', [], {'content_type': content_type}) %}
            {{ knp_menu_render(content_type_sidebar_right, {'template': '@ezdesign/parts/menu/sidebar_right.html.twig'}) }}

            <div class="ez-extra-actions-container">
                {% include '@ezdesign/admin/content_type/widgets/content_type_edit.html.twig' with {
                    'form': form_content_type_edit
                } only %}
            </div>
        </div>
    </div>
</div>



